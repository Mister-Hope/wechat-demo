/* pages/index/index.wxss */
swiper{
  width:100%;
  height:460rpx;
}
swiper image{
  width:100%;
  height:460rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-head{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-head image{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}
.post-head text{
  margin-left: 20rpx;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}
.post-img{
  width: 100%;
  /* height: 340rpx; */
  margin-bottom: 30rpx;
}
.post-content{
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
